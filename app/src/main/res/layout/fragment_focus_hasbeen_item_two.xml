<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBai"
    android:descendantFocusability="afterDescendants"
    android:orientation="vertical">
    <View
        style="@style/midLine" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/focus_hasbeen_item_Two_headImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/focus_hasbeen_item_Two_userNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="阿离"
                android:textColor="@color/colorHui"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/focus_hasbeen_item_Two_addressTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="地区"
                android:textColor="#5B5B5B"
                android:textSize="10sp" />


        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/focus_hasbeen_item_Two_contentTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:maxLines="5"
        android:text="若你足够优秀,自会有人珍惜"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/focus_hasbeen_item_Two_contentTv_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorHui"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/focus_hasbeen_item_Two_contentImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="13dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:background="#f7f7f7">

        <TextView

            android:id="@+id/focus_hasbeen_item_Two_metaTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@mipmap/fillchosetwo"
            android:drawablePadding="5dp"
            android:text="7878678678"
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/focus_hasbeen_item_Two_likeCountTv"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_hot_tag_recommend_praise"
            android:drawablePadding="10dp"
            android:text="695"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/focus_hasbeen_item_Two_reviewTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_hot_tag_recommend_reply"
            android:drawablePadding="10dp"
            android:text="695"
            android:textColor="@android:color/darker_gray"
            android:layout_marginLeft="52dp"
            android:layout_marginStart="52dp"
            android:layout_alignBottom="@+id/focus_hasbeen_item_Two_more"
            android:layout_toRightOf="@+id/focus_hasbeen_item_Two_likeCountTv"
            android:layout_toEndOf="@+id/focus_hasbeen_item_Two_likeCountTv" />

        <ImageView
            android:id="@+id/focus_hasbeen_item_Two_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:src="@mipmap/timeline_share"
            android:layout_alignTop="@+id/focus_hasbeen_item_Two_reviewTv"
            android:layout_toRightOf="@+id/focus_hasbeen_item_Two_reviewTv"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp"/>

        <ImageView
            android:id="@+id/focus_hasbeen_item_Two_more"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/share_more" />
    </RelativeLayout>



</LinearLayout>