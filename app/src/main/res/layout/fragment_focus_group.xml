<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorBai"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/focus_group_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            style="@style/midLine" />
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:textSize="12dp"
        android:text="你还没有加入任何小组,马上加入小组和大家讨论吧"
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <View
        style="@style/smallLine"/>

    </LinearLayout>

    <com.example.dllo.keepproject.view.MyCustomListView
        android:id="@+id/focus_group_lv"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    </LinearLayout>
    </ScrollView>
</LinearLayout>