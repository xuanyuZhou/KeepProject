<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout style="@style/foucusBar_style">

        <ImageView
            android:id="@+id/focus_addFriend"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:src="@mipmap/add_friend" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"

            android:orientation="vertical"
            android:id="@+id/linearLayout">

            <android.support.design.widget.TabLayout
                android:id="@+id/focus_tablayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

        </LinearLayout>

        <ImageView
            android:id="@+id/focus_news"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:src="@mipmap/newslight" />

        <ImageView
            android:id="@+id/focus_Triangle_focusbeen"
            android:layout_width="20dp"
            android:layout_height="7dp"
            android:src="@mipmap/triangle_white"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="145dp"
             />
        <ImageView
            android:id="@+id/focus_Triangle_group"
            android:layout_width="20dp"
            android:layout_height="7dp"
            android:src="@mipmap/triangle_white"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="205dp" />
    </RelativeLayout>

    <View style="@style/midLine" />
    <android.support.v4.view.ViewPager
        android:id="@+id/focus_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>