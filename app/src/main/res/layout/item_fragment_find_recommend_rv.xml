<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="10dp"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/find_fragment_recommend_avatarIv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/find_fragment_recommend_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="keep"
        android:textSize="10dp"
        android:maxEms="5"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_below="@+id/find_fragment_recommend_avatarIv"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/find_fragment_recommend_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="keep 推荐"
        android:textSize="10dp"
        android:maxEms="5"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_below="@+id/find_fragment_recommend_username"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
