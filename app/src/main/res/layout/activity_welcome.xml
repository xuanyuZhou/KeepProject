<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.dllo.keepproject.view.CustomVideoView
        android:id="@+id/welcome_videoview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:src="@mipmap/keepxxx" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="410dp"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/welcome_viewpager"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center" />

        <LinearLayout
            android:id="@+id/welcome_linearlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal" />

    </RelativeLayout>


    <Button
        android:id="@+id/welcome_register"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="30dp"
        android:alpha="0.3"
        android:background="@drawable/shape_register_btn"
        android:text="注册"
        android:textColor="#000000" />

    <Button
        android:id="@+id/welcome_login"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/welcome_register"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/welcome_register"
        android:layout_toRightOf="@+id/welcome_register"
        android:alpha="0.3"
        android:background="@drawable/shape_login_btn"
        android:text="登录"
        android:textColor="#ffffff"/>



</RelativeLayout>
