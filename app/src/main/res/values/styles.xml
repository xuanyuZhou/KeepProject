<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#534B5B</item>
        <item name="colorPrimaryDark">#534B5B</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--去掉原生标题栏-->
    <style name="NoBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#534B5B</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--欢迎页没有标题栏-->
    <style name="welcomeNoBar" parent="Theme.AppCompat.Light.NoActionBar"/>

    <!--标题栏style-->
    <style name="titleBar_style">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#534B5B</item>
    </style>

    <!--RadioButton_style-->
    <style name="radioBtn_style">
        <item name="android:layout_margin">3dp</item>
        <item name="android:textColor">@drawable/selector_rb_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--宽线-->
    <style name="bigLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">#DCDCDC</item>
    </style>

    <!--细线-->
    <style name="smallLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#DCDCDC</item>
    </style>

    <!--中线-->
    <style name="midLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">9dp</item>
        <item name="android:background">#DCDCDC</item>
    </style>
</resources>
