<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorHui</item>
        <item name="colorPrimaryDark">@color/colorHui</item>
        <item name="colorAccent">@color/colorQianHui</item>
        <!-- AppCompatEditText默认状态状态设置底线颜色 -->
        <item name="colorControlNormal">@color/colorQianHui</item>
        <!-- AppCompatEditText选择的底线颜色 -->
        <item name="colorControlActivated">@color/colorQianHui</item>
    </style>

    <!--去掉原生标题栏-->
    <style name="NoBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorHui</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--欢迎页没有标题栏-->
    <style name="welcomeNoBar" parent="Theme.AppCompat.Light.NoActionBar"/>

    <!--标题栏style-->
    <style name="titleBar_style">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorHui</item>
    </style>
    <!--发现页style-->
<style name="foucusBar_style">
    <item name="android:layout_height">50dp</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:background">#534B5B</item>
</style>
    <!--RadioButton_style-->
    <style name="radioBtn_style">
        <item name="android:layout_margin">3dp</item>
        <item name="android:textColor">@drawable/selector_rb_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--宽线-->
    <style name="bigLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">#DCDCDC</item>
    </style>

    <!--细线-->
    <style name="smallLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#DCDCDC</item>
    </style>

    <!--中线-->
    <style name="midLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">9dp</item>
        <item name="android:background">#DCDCDC</item>
    </style>

    <!--添加好友的 layout布局-->
    <style name="addfriendLayout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--添加好友的 图片布局-->
    <style name="addfriendImag">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>
  <!--添加好友的 文字layout-->
    <style name="addfriendTVLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--添加好友的 第一个文字-->

    <style name="addfriendTvone">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">15sp</item>
    </style>
    <!--添加好友的 第二个文字-->
  <style name="addfriendTvTWO">
      <item name="android:layout_width">wrap_content</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:layout_marginLeft">5dp</item>
      <item name="android:textColor">@android:color/darker_gray</item>
      <item name="android:textSize">10sp</item>
  </style>


    <!--添加好友的图片 折线-->
    <style name="addfriendImageLine">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@mipmap/settings_arrow</item>
    </style>


</resources>
